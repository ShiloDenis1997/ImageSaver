<Window x:Class="ImageSaver.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSaver.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="searchTextBox" HorizontalAlignment="Left" Height="28" Margin="52,35,0,0" TextWrapping="Wrap" Text="Search text" VerticalAlignment="Top" Width="126" FontSize="16"/>
        <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Left" Margin="183,35,0,0" VerticalAlignment="Top" Width="80" Height="28"/>
        <Button x:Name="changeDestinationButton" Content="Select save folder" HorizontalAlignment="Left" Margin="358,35,0,0" VerticalAlignment="Top" Width="122" Height="28"/>
        <Label x:Name="saveToLabel" Content="Save to ..." HorizontalAlignment="Left" Margin="492,35,0,0" VerticalAlignment="Top" Height="28" Width="74"/>
        <ScrollViewer HorizontalAlignment="Left" Height="249" Margin="52,95,0,0" VerticalAlignment="Top" Width="693">
            <WrapPanel Name="imagesPanel">
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
